<Window x:Class="RailroadStationVisualizer.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailroadStationVisualizer.App"
        mc:Ignorable="d"
        Title="Отображение схемы ЖД станции"
        MinHeight="450"
        Height="800"
        MinWidth="800"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{x:Static SystemColors.ControlBrush}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="White" HorizontalAlignment="Left" >
            <StackPanel Orientation="Vertical" Margin="6">
                <TextBlock Text="Парк"/>
                <ComboBox Width="100" Margin="0,6,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="6">
                <TextBlock Text="Цвет заливки"/>
                <ComboBox Width="100" Margin="0,6,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
